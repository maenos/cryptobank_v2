{% extends 'base.html.twi' %}

{% block title %}Log in!{% endblock %}
{% block css %}
    {{ encore_entry_link_tags('admin') }}
{% endblock %}
{% block body %}

<div class="login">
    <img src="{{ asset('build/img/logo.png')}}" alt="" width="100px">
<h2>Connection Ã  L'administraton</h2>
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    
    <h2>Please sign in</h2>
  <div class="group">
    <input type="text" value="{{ last_username }}" name="pseudo" id="inputEmail"  placeholder="useradmin" required autofocus>
<i class="fas fa-user"></i>
  </div>
 
 <div class="group">
    <input type="password" name="password" id="inputPassword" required>
    <i class="fas fa-lock"></i>
 </div>
   

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
